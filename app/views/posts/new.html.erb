<div class="container">
  <div class="row">
    <div class="col-sm-6 mx-auto col-sm-offset-3">
      <h2 class="text-center">Create blog post</h2>
        <%= bootstrap_form_for Post.new do |f| %>
          <div class="form-group">
            <%= f.text_area :text %>
          </div>
          <div class="form-group">
            <%= f.file_field :image, accept: "image/x-png, image/gif, image/jpeg"%>
          </div>
          <div class="form-group" hidden>
            <%= f.text_field :user_id, value: current_user.id, class:'d-none'%>
          </div>
          <br>
          <div class="text-center">
            <%= f.submit 'Create Post', class: 'btn btn-primary' %>
          </div>
        <% end %>
        <% if @post.nil? && @post&.errors&.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@post.errors.count, "error") %> prohibited this article from being saved:</h2>
            <ul>
            <% @post.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
    </div>
  </div> 
</div>